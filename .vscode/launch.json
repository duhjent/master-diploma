        {
            "name": "Debug tensorboard",
            "type": "debugpy",
            "request": "launch",
            "module": "experiments.initial.visualize_tb"
        },
        {
            "name": "Debug classification",
            "type": "debugpy",
            "request": "launch",
            "module": "experiments.classification.train",
            "args": [
                "--img_path",
